<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProgramCodeActivity">

    <EditText
        android:id="@+id/etProgramCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="155dp"
        android:ems="10"
        android:hint="Enter Program Code"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etProgramCode"
        android:layout_alignStart="@+id/etProgramCode"
        android:layout_alignEnd="@+id/etProgramCode"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="61dp"
        android:layout_marginTop="118dp"
        android:layout_marginEnd="63dp"
        android:text="Submit" />

    <ToggleButton
        android:id="@+id/btnRole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="236dp"
        android:checked="true"
        android:textOff="Mentee"
        android:textOn="Mentor" /> <!--text to be displayed whenever toggle button is checked-->

</RelativeLayout>